{
    "version": "0.2.0",
    "configurations": [
        {
            //-- Nombre de la configuracion
            "name": "RUN file",

            //-- Depurador de Python
            "type": "debugpy",

            //-- Lanzar el depurador
            "request": "launch",

            //-- Programa a depurar: Fichero en la pesta침a activa
            "program": "${file}",
            
            //-- D칩nde lanzar el depurador
            "console": "internalConsole",
           
            //-- Depurar s칩lo el c칩digo del usuario (no del sistema)
            "justMyCode": true,

            //-- Directorio de trabajo donde ejecutar el programa
            "cwd": "${workspaceFolder}/${relativeFileDirname}"
        }
    ]
}